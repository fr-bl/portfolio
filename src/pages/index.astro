<style>
  .title {
    position: relative;
  }
  .name > .first {
    font-size: 0.8em;
    font-weight: 200;
    color: rgb(var(--color-text));
  }
  #waving {
    font-size: min(2em, calc(-1em + 40vw));
    position: absolute;
    right: 0px;
    bottom: max(-0.5em, calc(-16rem + 1em));
    animation: 1s waving ease-in-out;
  }
  @keyframes waving {
    25% {
      transform: rotateZ(-10deg);
    }

    50% {
      transform: rotateZ(7deg);
    }

    75% {
      transform: rotateZ(-5deg);
    }
  }
</style>

<script>
  const waving = document.getElementById("waving") as HTMLDivElement;
  let animating = true;
  function animate() {
    if (animating) return;
    waving.style.animation = "none";
    waving.offsetHeight;
    waving.style.animation = null!;
    animating = true;
  }
  waving.addEventListener("animationend", () => {
    animating = false;
  });
  waving.addEventListener("mouseenter", animate);
</script>
